<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="70">

        <TextView
            android:id="@+id/tv_contatos_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contatos_nome"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/m3_black" />

        <TextView
            android:id="@+id/tv_contatos_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contatos_numero"
            android:textColor="@color/m3_primary_40"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:src="@drawable/baseline_phone_24"
        android:layout_gravity="center_vertical"
        app:cornerRadius="100dp"
        app:tint="@color/m3_primary_30" />

</LinearLayout>